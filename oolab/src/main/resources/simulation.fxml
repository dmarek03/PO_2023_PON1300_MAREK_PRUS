<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">

    <center>



        <VBox spacing="10">

            <GridPane fx:id="mapGrid"  vgap="0" hgap="0" gridLinesVisible="true" alignment="CENTER" />

            <Label fx:id="infoLabel" text="All animals will be living here!" textAlignment="CENTER"/>

            <!-- New controls added below -->

            <HBox spacing="10">
                <Label text="Move List:"/>
                <TextField fx:id="moveListTextField" promptText="Enter move list"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Move Description:"/>
                <Label fx:id="moveDescriptionLabel" text=""/>
            </HBox>

            <Button text="Start" onAction="#onSimulationStartClicked"/>
        </VBox>
    </center>
</BorderPane>